@model ThoiTrangNam.Models.Product
@{
    ViewData["Title"] = "Details";
}
<div>
    <h4>Chi tiết sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-13">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm~2">
            @Html.DisplayNameFor(model => model.BuyPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyPrice)
        </dd>
        <dt class="col-sm~2">
            @Html.DisplayNameFor(model => model.SellPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SellPrice)
        </dd>
        <dt class="col-sm~2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm~2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm~2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width="280px" />
        </dd>
        <dt class="col-sm-2">
            Other Images
        </dt>
        <dd class="col-sm-10">
            @if (Model.Images.Count > 0)
            {
                foreach (var image in Model.Images)
                {
                    <img src="@image.Url" width="200px" />
                }
            }
            else
            {
                <p>No other images available.</p>
            }
        </dd>
        <dt class="col-sm~2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Sửa</a> |
    <a asp-action="Index">Trở lại</a>
</div>