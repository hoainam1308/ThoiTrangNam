@model ThoiTrangNam.Models.Product

@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid mb-3" alt="Main Image">
        <div class="d-flex flex-wrap">
            @if (Model.Images != null && Model.Images.Any())
            {
                foreach (var image in Model.Images)
                {
                    <img src="@image.Url" class="img-thumbnail me-2 mb-2" alt="Other Image" style="width: 80px; height: auto;" />
                }
            }
        </div>
    </div>
    <div class="col-md-6">
        <h2>@Model.ProductName</h2>
        <p class="mx—3"><strong>Price:</strong> @Model.SellPrice.ToString("#,##0") VNĐ</p>
        <hr>
        <h4>Mô tả:</h4>
        <p>@Model.Description</p>
        <hr>
        <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.ProductId" class="btn btn-primary"><i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng</a>
    </div>
</div>
