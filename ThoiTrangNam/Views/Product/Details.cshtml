@model ThoiTrangNam.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="img-fluid" alt="Main Image">
        <div class="mt-3">
            @if (Model.Images != null && Model.Images.Any())
            {
                foreach (var image in Model.Images)
                {
                    <img src="@image.Url" class="img-thumbnail" alt="Other Image" style="width: 100px; height: auto;" />
                }
            }
        </div>
    </div>
    <div class="col-md-8">
        <h2>@Model.ProductName</h2>
        <p><strong>Giá bán:</strong> @Model.SellPrice</p>
        <p><strong>Mô tả:</strong> @Model.Description</p>
    </div>
</div>
