<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>ThoiTrangNam</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    <!-- Favicon -->
    <link href="~/favicon.ico" rel="icon">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ThoiTrangNam.styles.css" asp-append-version="true" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
       
        <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
            <div class="col-lg-4">
                <a href="" class="text-decoration-none">
                    <span class="h1 text-uppercase text-primary bg-dark px-2">MEN</span>
                    <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">FASHION</span>
                </a>
            </div>
            <div class="col-lg-4 col-6 text-left">
                <form action="">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for products" id="query">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary" id="searchButton">
                                <i class="fa fa-search"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-4 col-6 text-right">
                <p class="m-0">Customer Service</p>
                <h5 class="m-0">+012 345 6789</h5>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid bg-dark mb-30">
        <div class="row px-xl-5">
            @await Html.PartialAsync("_CategoriesPartial")
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <span class="h1 text-uppercase text-dark bg-light px-2">Multi</span>
                        <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Shop</span>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a asp-controller="Home" asp-action="Index" class="nav-item nav-link">Home</a>
                            <a asp-controller="Home" asp-action="Shop"  class="nav-item nav-link">Shop</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                                    Pages <i class="fa fa-angle-down mt-1"></i>
                                </a>
                                <div class="dropdown-menu bg-primary rounded-0 border-0 m-0">
                                    <a href="/Cart/Index" class="dropdown-item">Shopping Cart</a>
                                    <a href="/Cart/Checkout" class="dropdown-item">Checkout</a>
                                </div>
                            </div>
                            <a href="/Home/ContactUs" class="nav-item nav-link">Contact</a>
                           
                        </div>
                        <div>
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                        <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                            <a href="/home/orderlist" class="btn px-0">
                                <i class="fas fa-bell text-primary"></i>
                                @await Html.PartialAsync("_NotificationPartial")
                            </a>
                            <a asp-controller="Cart" asp-action="Index" class="btn px-0 ml-3">
                                <i class="fas fa-shopping-cart text-primary"></i>
                                @await Component.InvokeAsync("CartWidget")
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->
    @RenderBody()
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-secondary mt-5 pt-5">
        <div class="row px-xl-5 pt-5">
            <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                <h5 class="text-secondary text-uppercase mb-4">Get In Touch</h5>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>@StaticClass.MyAddress</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>@StaticClass.MyEmail</p>
                <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>@StaticClass.MyPhone</p>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row">
                    <div class="col-md-8 mb-5">
                        <h5 class="text-secondary text-uppercase mb-4">Quick Shop</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Home</a>
                            <a class="text-secondary mb-2" href="/Home/Shop"><i class="fa fa-angle-right mr-2"></i>Our Shop</a>
                            <a class="text-secondary mb-2" href="/Cart/Index"><i class="fa fa-angle-right mr-2"></i>Shopping Cart</a>
                            <a class="text-secondary mb-2" href="/Cart/Checkout"><i class="fa fa-angle-right mr-2"></i>Checkout</a>
                            <a class="text-secondary" href="/Home/ContactUs"><i class="fa fa-angle-right mr-2"></i>Contact Us</a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h5 class="text-secondary text-uppercase mb-4">Connect with MenFashion</h5>
                        <p>Any inquiries, please contact us</p>
                        <h6 class="text-secondary text-uppercase mt-4 mb-3">Follow Us</h6>
                        <div class="d-flex">
                            <a class="btn btn-primary btn-square mr-2" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-primary btn-square mr-2" href="https://www.facebook.com/profile.php?id=100050559302989" target="_blank"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-primary btn-square" href="https://www.instagram.com/13hn.lust/" target="_blank"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row border-top mx-xl-5 py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
            <div class="col-md-6 px-xl-0">
                <p class="mb-md-0 text-center text-md-left text-secondary">
                    &copy; <a class="text-primary" href="#">Domain</a>. All Rights Reserved. Designed
                    by
                    <a class="text-primary" href="https://htmlcodex.com">HTML Codex</a>
                </p>
            </div>
            <div class="col-md-6 px-xl-0 text-center text-md-right">
                <img class="img-fluid" src="~/img/payments.png" alt="">
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var searchButton = document.getElementById('searchButton');

            searchButton.addEventListener('click', function (event) {
                event.preventDefault(); // Chặn hành vi mặc định của form

                var queryInput = document.getElementById('query');
                var currentUrl = window.location.href;
                var query = queryInput.value;
                var params = new URLSearchParams(window.location.search);

                params.set('query', query);
                var newUrl = currentUrl.split('?')[0] + '?' + params.toString();

                // Kiểm tra xem đường dẫn của URL có phải là http://localhost:5195/Home/Shop không
                if (!currentUrl.includes('/Home/Shop')) {
                    // Nếu không, sửa lại đường dẫn cho giống để tránh gọi ra http://localhost:5195/?query=
                    newUrl = 'http://localhost:5195/Home/Shop?' + params.toString();
                }

                window.location.href = newUrl;
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var dropdownItems = document.querySelectorAll('.dropdown-item');

            dropdownItems.forEach(function (item) {
                item.addEventListener('click', function (event) {
                    var currentUrl = window.location.href;
                    var param = event.target.getAttribute('href').split('?')[1]; // Lấy tham số truy vấn từ href của liên kết được chọn

                    // Kiểm tra xem có các tham số truy vấn hiện có không
                    var params = new URLSearchParams(window.location.search);

                    // Loại bỏ tham số trùng lặp trước khi thêm mới
                    var paramName = param.split('=')[0];
                    if (params.has(paramName)) {
                        params.delete(paramName);
                    }

                    // Thêm tham số truy vấn mới vào
                    params.append(paramName, param.split('=')[1]);

                    // Tạo URL mới với tất cả các tham số
                    var newUrl = currentUrl.split('?')[0] + '?' + params.toString();

                    window.location.href = newUrl;
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>