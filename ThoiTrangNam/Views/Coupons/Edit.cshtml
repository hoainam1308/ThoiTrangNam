@model ThoiTrangNam.Models.Coupon

@{
    ViewData["Title"] = "Edit Coupon";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit Coupon</h1>

<h4>Coupon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountAmount" class="control-label"></label>
                <input asp-for="DiscountAmount" class="form-control" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsPercentage" class="control-label"></label>
                <input asp-for="IsPercentage" class="form-control" />
                <span asp-validation-for="IsPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsageLimit" class="control-label"></label>
                <input asp-for="UsageLimit" class="form-control" />
                <span asp-validation-for="UsageLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimesUsed" class="control-label"></label>
                <input asp-for="TimesUsed" class="form-control" />
                <span asp-validation-for="TimesUsed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary"> Trở về</a>
</div>
